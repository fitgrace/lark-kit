{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["webpack-env", "node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
